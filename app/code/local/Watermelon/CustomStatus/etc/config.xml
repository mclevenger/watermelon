<?xml version="1.0"?>
<config>
  <modules>
    <Watermelon_CustomStatus>
      <version>0.1.0</version>
    </Watermelon_CustomStatus>
  </modules>
  <global>
  <sales>
	<order>
	  <statuses>
		<backordered translate="label"><label>Backordered</label></backordered>
	  </statuses>
	  <states>
		<pending_payment>
		  <statuses>
			<backordered />
		  </statuses>
		</pending_payment>
	  </states>
	</order>
 </sales>
    <helpers>
      <customstatus>
        <class>Watermelon_CustomStatus_Helper</class>
      </customstatus>
    </helpers>
	<models>
	  <customstatus>
		<class>Watermelon_CustomStatus_Model</class>
		<resourceModel>customstatus_mysql4</resourceModel>
	  </customstatus>
	</models>
    <events>
	  <sales_order_save_after>
        <observers>
          <sales_order_save_after_handler>
            <type>model</type>
            <class>customstatus/observer</class>
            <method>afterOrderPlaced</method>
            <args></args>
          </sales_order_save_after_handler>
        </observers>
      </sales_order_save_after>
    <sales_order_invoice_save_before>
        <observers>
          <sales_order_invoice_save_before_handler>
            <type>model</type>
            <class>customstatus/observer</class>
            <method>beforeInvoiceSaved</method>
            <args></args>
          </sales_order_invoice_save_before_handler>
        </observers>
      </sales_order_invoice_save_before>
    </events>
  </global>
<stores>
    <admin>
      <design>
        <package>
          <name>default</name>
        </package>
        <theme>
          <default>watermelon</default>
        </theme>
      </design>
    </admin>
  </stores>  
</config> 
